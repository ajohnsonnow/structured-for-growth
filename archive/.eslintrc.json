{
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_|^next$|^req$|^res$" }],
    "no-console": "off",
    "no-process-exit": "off",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-var": "error",
    "prefer-const": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-throw-literal": "error",
    "prefer-promise-reject-errors": "error",
    "no-return-await": "warn",
    "require-await": "warn"
  },
  "overrides": [
    {
      "files": ["server/**/*.js"],
      "env": {
        "browser": false,
        "node": true
      }
    },
    {
      "files": ["client/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "globals": {
        "fetch": "readonly",
        "IntersectionObserver": "readonly",
        "MutationObserver": "readonly"
      }
    },
    {
      "files": ["**/*.test.js", "**/*.spec.js", "tests/**/*.js"],
      "env": {
        "node": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "vi": "readonly",
        "test": "readonly"
      }
    }
  ],
  "ignorePatterns": ["dist/", "node_modules/", "codeql_db/", "archive/"]
}
